{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@angular-monorepo/api-interface": ["libs/api-interface/src/index.ts"],
      "@angular-monorepo/backdoor": ["libs/backdoor/src/index.ts"],
      "@angular-monorepo/components": ["libs/components/src/index.ts"],
      "@angular-monorepo/debt-simplification": [
        "libs/debt-simplification/src/index.ts"
      ],
      "@angular-monorepo/entities": ["libs/entities/src/index.ts"],
      "@angular-monorepo/mysql-adapter": ["libs/mysql-adapter/src/index.ts"],
      "@angular-monorepo/utils": ["libs/utils/src/index.ts"],
      "@angular-monorepo/data-adapter": ["libs/data-adapter/src/index.ts"],
    }
  },
  "exclude": ["node_modules", "tmp"]
}
